<launch>
  <rosparam file="$(find ar2mav)/drones.yaml" command="load" />
  <rosparam file="$(find ar2mav)/tweety_camera.yaml" command="load" ns="Parrot" /> 

  <node  ns="/Parrot/video" pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager" output="screen" />
  <node ns="/Parrot/video" pkg="nodelet" type="nodelet" name="Parrot_video" args="load ar2mav/ARDroneVideoNodelet nodelet_manager" output="screen" >
	<param name="name" value="Parrot" />
  </node>
  <node ns="/Parrot/video" pkg="nodelet" type="nodelet" name="Parrot_driver" args="load ar2mav/ARDroneDriverNodelet nodelet_manager" output="screen" >
	<param name="name" value="Parrot" />
  </node>
  <node ns="/Parrot/video" pkg="nodelet" type="nodelet" name="debayer" args="load image_proc/debayer nodelet_manager --no-bond" />
  <node ns="/Parrot/video" pkg="nodelet" type="nodelet" name="rectify_mono" args="load image_proc/rectify nodelet_manager --no-bond" />

  <node pkg="rqt_image_view" type="rqt_image_view" name="image_view" output="screen" />
</launch>


